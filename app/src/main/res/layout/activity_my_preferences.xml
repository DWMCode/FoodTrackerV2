                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_protein_min"
                android:id="@+id/lblProteinMinPref"
                android:layout_below="@+id/txtProteinMaxPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtProteinMinPref"
                android:layout_below="@+id/lblProteinMinPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_veg_max"
                android:id="@+id/lblVegetableMaxPref"
                android:layout_below="@+id/txtProteinMinPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtVegetableMaxPref"
                android:layout_below="@+id/lblVegetableMaxPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_veg_min"
                android:id="@+id/lblVegetableMinPref"
                android:layout_below="@+id/txtVegetableMaxPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtVegetableMinPref"
                android:layout_below="@+id/lblVegetableMinPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_dairy_max"
                android:id="@+id/lblDairyeMaxPref"
                android:layout_below="@+id/txtVegetableMinPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDairyMaxPref"
                android:layout_below="@+id/lblDairyMaxPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_dairy_min"
                android:id="@+id/lblDairyMinPref"
                android:layout_below="@+id/txtDairyMaxPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDairyMinPref"
                android:layout_below="@+id/lblDairyMinPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:id="@+id/btnUpdatePreferences"
                android:textColor="#ffffff"
                android:background="#39966c"
                android:singleLine="true"
                />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
