                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtFruitMinPref"
                android:layout_below="@+id/lblFruitMinPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_grain_max"
                android:id="@+id/lblGrainMaxPref"
                android:layout_below="@+id/txtFruitMinPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtGrainMaxPref"
                android:layout_below="@+id/lblGrainMaxPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_grain_min"
                android:id="@+id/lblGrainMinPref"
                android:layout_below="@+id/txtGrainMaxPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtGrainMinPref"
                android:layout_below="@+id/lblGrainMinPref"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/pref_protein_max"
                android:id="@+id/lblProteinMaxPref"
                android:layout_below="@+id/txtGrainMinPref"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                style="@style/Preference_Title_Colors" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtProteinMaxPref"
                android:layout_below="@+id/lblProteinMaxPref"
