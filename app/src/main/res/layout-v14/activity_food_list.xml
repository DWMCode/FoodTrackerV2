<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FoodListActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/glMain">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/activity_food_list_new"
            android:id="@+id/lblNewItems"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#467ee5"
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/listNewItems"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/activity_food_list_existing"
            android:id="@+id/lblExistingItems"
            android:layout_row="2"
            android:layout_column="0"
            android:background="#467ee5"
            android:textColor="#ffffff"
            android:textAlignment="center" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="382dp"
            android:id="@+id/listExistingItems"
            android:layout_row="3"
            android:layout_column="0" />
    </GridLayout>

</RelativeLayout>
